# Kilowatt Frontend Environment Configuration

# Backend API Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_USE_BACKEND_API=false
REACT_APP_USE_MOCK_AUTH=true

# Development Settings
REACT_APP_DEBUG=true
REACT_APP_SHOW_DATA_SOURCE=true

# Feature Flags
REACT_APP_ENABLE_REAL_TIME_UPDATES=false
REACT_APP_ENABLE_PAGINATION=false
REACT_APP_ENABLE_ADVANCED_FILTERING=false

# Cache Settings
REACT_APP_CACHE_TTL=300000

# Instructions:
# 1. Copy this file to .env.local
# 2. Set REACT_APP_USE_BACKEND_API=true to use backend APIs
# 3. Set REACT_APP_USE_MOCK_AUTH=false to use real authentication
# 4. Restart the development server after making changes
